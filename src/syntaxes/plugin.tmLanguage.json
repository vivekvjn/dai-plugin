{
  "scopeName": "source.c.plugin",
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DAI plugin",
  "patterns": [
    {
      "include": "#section"
    },
    {
      "include": "#pluginPoint"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "section": {
      "patterns": [
        {
          "name": "variable.other.c.plugin",
          "match": "(?<=plugin\\.)\\b(start|revision|apl|expand|switch|version|prereq|header|libgen|lib|dbupdater|exe|rootexe|files|segments|branch|oel|event|end)\\b"
        }
      ]
    },
    "pluginPoint": {
      "patterns": [
        {
          "name": "keyword.control.c.plugin",
          "match": "^\\s*\\b(plugin)\\b"
        },
        {
          "name": "meta.define.c.plugin",
          "match": "^\\s*>>(.*)"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.c.plugin",
          "match": "^!(.*)"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.c.plugin",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.c.plugin",
          "match": "\\\\."
        }
      ]
    }
  }
}
