{
  "name": "dai-plugin",
  "displayName": "DAI Plugin",
  "version": "1.0.0",
  "publisher": "vivekvijayan",
  "description": "DAI Plugin syntax highlighting and Intellisense",
  "author": {
    "name": "Vivek Vijayan",
    "email": "vivek.vijayan@dai.co.uk"
  },
  "icon": "images/icon.png",
  "repository": {
    "url": "https://github.com/vivekvjn/dai-plugin"
  },
  "preview": true,
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "DAI",
    "plugin",
    "formatter",
    "syntax",
    "highlight"
  ],
  "contributes": {
    "languages": [
      {
        "id": "plugin",
        "aliases": [
          "DAI plugin",
          "plugin"
        ],
        "extensions": [
          "plugin"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "plugin",
        "scopeName": "source.plugin",
        "path": "./src/syntaxes/plugin.tmLanguage.json",
        "embeddedLanguages": {
          "source.plugin": "c"
        }
      }
    ],
    "snippets": [
      {
        "language": "plugin",
        "path": "./src/snippets/plugin.json"
      },
      {
        "language": "c",
        "path": "./src/snippets/c.json"
      }
    ],
    "colors": [
      {
        "id": "meta.define.plugin",
        "description": "Color for plugin definition points",
        "defaults": {
          "dark": "#be2f76",
          "light": "#be2f76",
          "highContrast": "#be2f76"
        }
      }
    ],
    "themes": [
      {
        "label": "Visual Studio Dark - DAI",
        "uiTheme": "vs-dark",
        "path": "./src/themes/dai-theme.json"
      }
    ]
  },
  "devDependencies": {
    "prettier": "^1.19.1"
  }
}
