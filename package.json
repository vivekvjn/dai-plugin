{
  "name": "dai-plugin",
  "displayName": "DAI Plugin",
  "description": "DAI Plugin syntax highlighting and Intellisense",
  "version": "1.3.1",
  "publisher": "vivekvijayan",
  "author": {
    "name": "Vivek Vijayan",
    "email": "vivek.vijayan@dai.co.uk"
  },
  "icon": "images/icon.png",
  "repository": {
    "url": "https://github.com/vivekvjn/dai-plugin"
  },
  "preview": true,
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "DAI",
    "plugin",
    "formatter",
    "syntax",
    "highlight"
  ],
  "activationEvents": [
    "onLanguage:plugin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "plugin",
        "aliases": [
          "DAI plugin",
          "plugin"
        ],
        "extensions": [
          "plugin"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "path": "./src/syntaxes/plugin.tmLanguage.json",
        "scopeName": "source.c.plugin",
        "language": "plugin"
      },
      {
        "path": "./src/syntaxes/c.extended.tmLanguage.json",
        "scopeName": "source.c.extended",
        "injectTo": [
          "source.c"
        ]
      }
    ],
    "snippets": [
      {
        "language": "plugin",
        "path": "./src/snippets/plugin.json"
      },
      {
        "language": "c",
        "path": "./src/snippets/c.json"
      }
    ],
    "colors": [
      {
        "id": "meta.define.plugin",
        "description": "Color for plugin definition points",
        "defaults": {
          "dark": "#be2f76",
          "light": "#be2f76",
          "highContrast": "#be2f76"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "husky": "^3.1.0",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "standard-version": "^8.0.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
