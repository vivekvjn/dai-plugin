{
  "name": "dai-plugin",
  "displayName": "DAI Plugin",
  "description": "DAI Plugin syntax highlighting and Intellisense",
  "version": "1.5.0",
  "publisher": "vivekvijayan",
  "author": {
    "name": "Vivek Vijayan",
    "email": "vivek.vijayan@dai.co.uk"
  },
  "icon": "images/icon.png",
  "repository": {
    "url": "https://github.com/vivekvjn/dai-plugin"
  },
  "preview": false,
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "DAI",
    "plugin",
    "formatter",
    "syntax",
    "highlight"
  ],
  "activationEvents": [
    "onLanguage:plugin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "plugin",
        "aliases": [
          "DAI plugin",
          "plugin"
        ],
        "extensions": [
          "plugin"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "path": "./src/syntaxes/plugin.tmLanguage.json",
        "scopeName": "source.c.plugin",
        "language": "plugin"
      },
      {
        "path": "./src/syntaxes/c.extended.tmLanguage.json",
        "scopeName": "source.c.extended",
        "injectTo": [
          "source.c"
        ]
      }
    ],
    "snippets": [
      {
        "language": "plugin",
        "path": "./src/snippets/plugin.json"
      },
      {
        "language": "c",
        "path": "./src/snippets/c.json"
      },
      {
        "language": "shellscript",
        "path": "./src/snippets/sh.json"
      }
    ],
    "colors": [
      {
        "id": "meta.define.plugin",
        "description": "Color for plugin definition points",
        "defaults": {
          "dark": "#be2f76",
          "light": "#be2f76",
          "highContrast": "#be2f76"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "git flow release start v`node get-next-version.js`"
    },
    "skip": {
      "tag": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.1",
    "@types/vscode": "^1.60.0",
    "glob": "^7.2.0",
    "husky": "^7.0.0",
    "mocha": "^9.1.2",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.1"
  }
}
